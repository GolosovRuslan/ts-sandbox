{
  "compilerOptions": {

    "outDir": "./dist",
    "rootDir": "./", 

   
    "module": "es6",
    "target": "esnext",
    "lib": ["esnext", "dom"], 

   
    "sourceMap": false,     
    "declaration": false,    
    "declarationMap": false, 

    
    "strict": true,         
    "skipLibCheck": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },

  "exclude": ["node_modules"]
}
